{
  "crawler": {
    "base_url": "http://paper.people.com.cn/rmrb/pc/layout",
    "request_delay": 0.5,
    "max_retries": 3,
    "timeout": 30,
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  },
  "scheduler": {
    "daily_crawl_hour": 6,
    "daily_crawl_minute": 0,
    "weekly_check_day": "mon",
    "weekly_check_hour": 2,
    "weekly_check_minute": 0
  },
  "database": {
    "host": "localhost",
    "user": "news_crawler",
    "password": "password",
    "database": "news_db",
    "charset": "utf8mb4"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_file": "crawler.log",
    "max_bytes": 10485760,
    "backup_count": 5
  },
  "output": {
    "html_template": "default",
    "output_dir": "output"
  }
} 